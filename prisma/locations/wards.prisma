model wards {
  id             Int      @id @default(autoincrement())
  code           String   @unique @db.Char(5)
  name           String   @db.VarChar(100)
  slug           String   @db.VarChar(100)
  type           String   @db.VarChar(50)
  name_with_type String   @db.VarChar(150)
  path           String?
  path_with_type String?
  district_code  String   @db.Char(3)

  district districts @relation(fields: [district_code], references: [code]) // Quan hệ N-1 với districts sẽ có nhiều wards
  customers customer[] // Quan hệ 1-N với bảng customers sẽ có nhiều wards
  
  @@index([code])
  @@index([name])
  @@index([slug])
  @@index([type])
  @@index([name_with_type])
  @@index([path])
  @@index([path_with_type])
  @@index([district_code])
  @@map("wards")
}

