model provinces {
  id             Int      @id @default(autoincrement())
  code           String   @unique @db.Char(2)
  name           String   @db.VarChar(100)
  slug           String   @db.VarChar(100)
  type           String   @db.VarChar(50)
  name_with_type String   @db.VarChar(150)
  sort_order     Int?
  lat            Float?
  long           Float?
  image          String?  @db.Text


  districts districts[] // Quan hệ 1-N với bảng districts sẽ có nhiều provinces
  customers customer[] // Quan hệ 1-N với bảng customers sẽ có nhiều provinces

  @@index([code])
  @@index([name])
  @@index([slug])
  @@index([type])
  @@index([name_with_type])
  @@index([sort_order])
  @@map("provinces")
}

