// ============================================
// ACCOUNT MODULE - Account table definition
// ============================================

enum AccountStatus {
  ACTIVE // Hoạt động
  INACTIVE // Không hoạt động
  LOCKED // Khóa
}

enum AccountType {
  Employee // Nhân viên
  Admin // Quản trị viên
  Manager // Quản lý cửa hàng
  Owner // Chủ cửa hàng
  Customer // Khách hàng
}

model Account {
  id          Int           @id @default(autoincrement()) // ID của tài khoản
  username    String        @unique @db.VarChar(100) // Tên đăng nhập của tài khoản
  password    String        @db.VarChar(255) // Mật khẩu của tài khoản
  type        AccountType   @default(Employee) // Loại tài khoản
  status      AccountStatus @default(ACTIVE) // Trạng thái của tài khoản
  description String?       @db.VarChar(255) // Mô tả của tài khoản
  createdAt   DateTime      @default(now()) @map("created_at") // Thời gian tạo của tài khoản
  updatedAt   DateTime      @updatedAt @map("updated_at") // Thời gian cập nhật của tài khoản

  @@index([status]) // Index cho trạng thái của tài khoản
  @@map("accounts")
}
